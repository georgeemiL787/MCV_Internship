@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Employee Management System</h1>
    <p class="lead">Manage your employee database with ease</p>
    
    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Employee Management</h5>
                    <p class="card-text">View, add, edit, and delete employee records from your database.</p>
                    <a asp-controller="Employees" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="fas fa-users"></i> Manage Employees
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
}
